- if @show_jumbo
  .jumbotron
    %h1=t '.jumbotron.title'
    %p=t '.jumbotron.description'
    %p.text-muted=t '.jumbotron.usage'
- else
  - content_for :title, t('.title')
.page-header
  %h1=t '.title'

- @games.each_slice(2) do |row|
  .row
    - row.each do |game|
      .col-md-6
        = render partial: 'by_line', locals: { game: game }
        .scoreboard__game
          =render partial: 'game', locals: { game: game }
          .row.scoreboard__actions
            .col-md-12
              = link_to t('games.links.show'), game_path(game)
              - if can? :update, game
                = link_to t('games.links.update_score'), edit_score_game_path(game), :class => 'btn btn-xs btn-primary'
              - if can? :create_note, game
                = link_to t('games.links.create_note'), new_game_note_path(game), :class => 'btn btn-xs btn-default'
