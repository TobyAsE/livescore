= form_for @game, :html => { :class => 'form-horizontal' } do |f|
  .form-group{class: "#{'has-error' if @game.errors[:home_team].present?}"}
    = f.label :home_team_name, :class => 'control-label'
    .controls
      %input{id: :home_team_name, name: 'game[home_team_name]', type: :text, value: @game.home_team.try(:name), placeholder: t('.team_name.placeholder.home'), autocomplete: :off, class: 'form-control js-typeahead', data: { url: "#{teams_path}", name: "teams", minlength: 2 }}
  .form-group{class: "#{'has-error' if @game.errors[:away_team].present?}"}
    = f.label :away_team_name, :class => 'control-label'
    .controls
      %input{id: :away_team_name, name: 'game[away_team_name]', type: :text, value: @game.away_team.try(:name), placeholder: t('.team_name.placeholder.away'), autocomplete: :off, class: 'form-control js-typeahead', data: { url: "#{teams_path}", name: "teams", minlength: 2 }}
  .form-group
    = f.label :game_day, :class => 'control-label'
    .controls
      = f.date_field :game_day, :class => 'form-control', placeholder: "#{localize Date.today}"
  .form-group
    = f.label :game_time, :class => 'control-label'
    .controls
      = f.text_field :game_time, :class => 'form-control', placeholder: "15:00", maxlength: 255
  .form-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'form-control', maxlength: 255
  .form-group.form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), games_path, :class => 'btn btn-default'
