= form_for [game, note], html: { class: 'form-horizontal', role: 'form' } do |f|
  = hidden_field_tag :source, local_assigns.fetch(:source, 'default')

  .row
    .col-xs-12
      %label.control-label= Note.human_attribute_name(:text)
  .row
    .controls
      .col-xs-12= f.text_field :text, class: 'form-control', maxlength: 255
  .row
    .col-xs-12
      .form-actions
        = f.submit nil, :class => 'btn btn-primary'
        = link_to t('.cancel', :default => t("helpers.links.cancel")), game_path(@game), :class => 'btn'


