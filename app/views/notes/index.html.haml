.page-header
  %h1=@game.title
.panel.panel-default
  - if @notes.present?
    .panel-heading= t('.title')
    %ul.list-group
      - @notes.each do |note|
        %li.list-group-item
          %span= localize note.created_at
          %em= note.text
  - else
    .panel-heading= t('.title_no_notes')
